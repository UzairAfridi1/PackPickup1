@model IEnumerable<PackPickup1.Models.Driver>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>
<h1 class="text-center">Drivers List</h1>


<div id="example">
    <div id="grid">

    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        KendoGridDataLoading();

    });
    function KendoGridDataLoading() {

        //Grid Setting
        $("#grid").kendoGrid({

            dataSource: {

                transport: {

                    read: {
                        url: "/Driver/getDriver",

                    },
                    update: {
                        url: "/Driver/Edit",
                        type: "POST",
                    },
                    //destroy: {
                    //    url: "",

                    //},
                    //create: {
                    //    url: "/Driver/Save",
                    //    type: "POST",

                    //},

                    parameterMap: function (options, operation) {
                        if (operation == "update") {
                            options.DateOfBirth = kendo.toString(options.DateOfBirth, "yyyy/MM/dd");
                            return options;
                        }
                    }

                },

                schema: {
                    model: {
                        id: "DriverId",
                        fields: {
                            DriverId: { editable: false, nullable: false },
                            User: {
                                validation: { required: true }
                            },
                            Nationality: { validation: { required: true } },
                            Language: { validation: { required: true } },
                            DateOfBirth: { type: "date", editable: true },

                        }
                    }

                },

                pageSize: 5,

            },
            height: 550,
            groupable: true,
            sortable: true,
            navigatable: true,
            resizable: true,
            filterable: {
                extra: false,
                operators: {
                    string: {
                        startswith: "Starts with",
                        eq: "Is equal to",
                        neq: "Is not equal to"
                    }
                }
            },
            selectable: "row",
            batch: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },

            toolbar: ["create"],

            columns: [
                {
                    template: "<div class='customer-photo'" +
                        "style='background-image:url(../Images/#:Image#);'></div>" +
                        "<div class='customer-name'>#: User.Name  #</div>",
                    field: "User",
                    editor: true,
                    title: "Driver Name",
                    width: 240
                }, {
                    field: "Nationality",
                    title: "Nationality",
                    filterable: true
                }, {
                    field: "Language",
                    title: "Language",
                    filterable: true
                },
                {
                    title: "DateOfBirth",
                    field: "DateOfBirth",
                    format: "{0:dd/MM/yyyy}",
                    filterable: {
                        ui: "datetimepicker"
                    }
                },
                { command: ["edit", "destroy"], title: "Actions", width: "200px" }
            ],
            editable: "inline",

            save: function () {
                this.refresh();
            }
        });


    }
</script>